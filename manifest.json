{
    "manifest_version": 3,
    "name" : "Auto Scroller",
    "description": "Auto scroll websites with ease",
    "version" : "1.0",
    "permissions": ["activeTab", "scripting"],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action" :{
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
      }
}